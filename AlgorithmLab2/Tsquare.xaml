<Page x:Class="AlgorithmLab2.TSquare"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="T-Square Fractal" Margin="-100,-500">
    <Grid Height="568">
        <Canvas x:Name="FractalCanvas" Background="White" Margin="0,386,0,0" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="275,-300,0,-435" Width="400">
            <TextBlock Text="Fractal depth:" Margin="5" FontSize="22"/>
            <TextBox x:Name="DepthInput" Width="50" Margin="5" Text="3" MaxLength="2" FontSize="24"/>
            <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" Margin="5" Height="30" Width="50" FontSize="16"/>
            <Button x:Name="CheckButton" Content="Check" Click="CheckButton_Click" IsEnabled="False" Margin="5" Height="30" Width="50" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>
